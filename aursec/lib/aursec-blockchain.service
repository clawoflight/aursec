[Unit]
Description=Blockchain for aursec hash storage

[Service]
Type=simple
ExecStart=/usr/bin/geth --fast --port 30200 --rpcport 8105 --ipcdisable --rpc --rpcapi "eth,web3,miner" --datadir /var/aursec/chain --cache 512 --networkid 42 --verbosity 4 --unlock 0 --password /var/aursec/password
User=aursec
Group=aursec

[Install]
Wants=multi-user.target network.target
